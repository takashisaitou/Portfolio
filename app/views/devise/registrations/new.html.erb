

<div class="container">
  <div class="form-signin">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div  class="alert-danger">
      <%= devise_error_messages! %>
    </div>

      <h2 class="form-signin-heading">Please sign in</h2>

      <%= f.label :username, class: "sr-only" %><br />
      <%= f.text_field :username, class: "form-control", placeholder: "名前を入力してください" %>

      <%= f.label :email, class: "sr-only" %><br />
      <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "emailを入力してください" %>

      <%= f.label :department, class: "sr-only" %><br />
      <%= f.text_field :department, class: "form-control", placeholder: "所属部署を入力してください"  %>

      <%= f.label :パスワード, class: "sr-only" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "パスワードを入力してください" %>

      <%= f.label :パスワード確認, class: "sr-only" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "パスワードを確認してください" %>
      
      <div class="actions">
      <%= f.submit "サインアップ", class: "btn btn-lg btn-primary btn-block" %>
      </div>
    <% end %>
  </div>
</div>



<%#= render "devise/shared/links" %>
