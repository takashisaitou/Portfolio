<div class="form-group">
<%= form_for(place) do |f| %>
  <% if place.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= place.errors.count %>件のエラー:</h2>

      <ul>
      <% place.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :ハーブの種類 %>
    <%= f.text_field :herbname, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :畑状況 %>
    <%= f.text_field :content, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :address, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :latitude %>
    <%= f.text_field :latitude, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :longitude %>
    <%= f.text_field :longitude, class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
</div>
